{
  "name": "wundii/phplint",
  "description": "This tool checks the syntax and style of PHP files",
  "license": "MIT",
  "authors": [
    {
      "name": "Andreas Wunderwald",
      "email": "wundii@gmail.com"
    }
  ],
  "bin": [
    "bin/phplint"
  ],
  "require": {
    "php": ">=8.1",
    "ext-json": "*",
    "symfony/console": "6.2.*"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "phpstan/phpstan-strict-rules": "^1.5",
    "phpunit/phpunit": "^10.0",
    "rector/rector": "^0.16",
    "symfony/var-dumper": "^6.2",
    "symplify/easy-coding-standard": "^11.3"
  },
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "PHPLint\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PHPLint\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "auto-scripts": {
    },
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ],
    "complete-check": [
      "@rector-dry",
      "@phpstan",
      "@unittest",
      "@ecs-dry"
    ],
    "rector-dry": [
      "php vendor/bin/rector process --dry-run --ansi"
    ],
    "rector-apply": [
      "php vendor/bin/rector process --ansi"
    ],
    "phpstan": [
      "php vendor/bin/phpstan analyse src"
    ],
    "unittest": [
      "php vendor/bin/phpunit --configuration phpunit.xml"
    ],
    "ecs-dry": [
      "php vendor/bin/ecs check"
    ],
    "ecs-apply": [
      "php vendor/bin/ecs check --fix"
    ]
  }
}